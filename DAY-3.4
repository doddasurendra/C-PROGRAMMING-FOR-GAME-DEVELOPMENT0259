#include <stdio.h>

// Function to check whether a number is even or odd
int isEven(int num) {
    if(num % 2 == 0) {
        return 1;  // if the number is even, return 1
    }
    else {
        return 0;  // if the number is odd, return 0
    }
}

int main() {
    int num;
    
    printf("Enter a number: ");
    scanf("%d", &num);
    
    if(isEven(num)) {
        printf("%d is even.\n", num);
    }
    else {
        printf("%d is odd.\n", num);
    }
    
    return 0;
}
